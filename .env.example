# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# Environment
ENVIRONMENT=development  # development, staging, production

# API Configuration
API_BASE_URL=https://api.pakeaja.com
API_TIMEOUT=30000  # milliseconds

# Feature Flags
FEATURE_AUTH_ENABLED=true
FEATURE_DAILY_REPORTS_ENABLED=true
FEATURE_CANVASSING_ENABLED=true
FEATURE_SYNC_ENABLED=true
FEATURE_MATERIALS_ENABLED=false

# Sync Configuration
SYNC_INTERVAL_MINUTES=5
SYNC_RETRY_ATTEMPTS=3
OFFLINE_DATA_RETENTION_DAYS=7

# App Configuration
APP_NAME=PakeAja CRM
COMPANY_NAME=PT Pake Aja Teknologi

# Regional Settings
DEFAULT_LOCALE=id_ID
DEFAULT_CURRENCY=IDR
DEFAULT_TAX_RATE=11

# Push Notifications (Firebase)
# FCM_SERVER_KEY=your-fcm-server-key
# FCM_SENDER_ID=your-fcm-sender-id

# Analytics (optional)
# FIREBASE_PROJECT_ID=your-firebase-project-id
# SENTRY_DSN=your-sentry-dsn

# Maps (optional)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key