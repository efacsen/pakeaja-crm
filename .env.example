# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key  # Safe for client-side
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key  # Server-side only - NEVER expose this!

# Service Configuration
NEXT_PUBLIC_USE_SUPABASE=false  # Set to true to use Supabase instead of mock services

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="PakeAja CRM"

# Company Information
NEXT_PUBLIC_COMPANY_NAME="PT Pake Aja Teknologi"
NEXT_PUBLIC_COMPANY_EMAIL="info@pakeaja.com"
NEXT_PUBLIC_COMPANY_PHONE="021-2345-6789"
NEXT_PUBLIC_COMPANY_ADDRESS="Jl. Sudirman No. 123, Jakarta Pusat, DKI Jakarta 10110"

# Regional Settings
NEXT_PUBLIC_DEFAULT_LOCALE="id-ID"
NEXT_PUBLIC_DEFAULT_CURRENCY="IDR"
NEXT_PUBLIC_DEFAULT_TAX_RATE="11" # PPN rate in Indonesia

# Email Service (for production)
# SENDGRID_API_KEY=your-sendgrid-api-key
# RESEND_API_KEY=your-resend-api-key

# Monitoring (optional)
